# Mesh related options
[Mesh]
   [./Generation]
      dimension = '3'
      element_type = 'HEX27'
      n_elems_x = '3'
      n_elems_y = '3'
      n_elems_z = '3'
[]

# Options for tiem solvers
[unsteady-solver]
transient = false 

#Linear and nonlinear solver options
[linear-nonlinear-solver]
max_nonlinear_iterations = 50 
max_linear_iterations = 2000

verify_analytic_jacobians = 1.0e-6 

relative_step_tolerance = 1.0e-10

# Visualization options
[vis-options]
output_vis = false 
vis_output_file_prefix = thermally_driven_3d_flow
output_format = 'ExodusII xdr'

# Options for print info to the screen
[screen-options]
print_equation_system_info = 'true' 
print_mesh_info = 'true'
print_log_info = 'true'
solver_verbose = 'true'
solver_quiet = 'false'

echo_physics = 'true'

[Materials]
   [./TestMaterial]
      [./Viscosity]
          model = 'constant'
          value = '1.0'
      [../ThermalConductivity]
          model = 'constant'
          value = '1.0'
    [../Density]
      value = '1.0'
      [../SpecificHeat]
         model = 'constant'
         value = '1.0'
      [../ReferenceTemperature]
         value = '1.0'
      [../ThermalExpansionCoeff]
         value = '1.0'
[]

# Options related to all Physics
[Physics]

enabled_physics = 'IncompressibleNavierStokes HeatTransfer BoussinesqBuoyancy'

# Options for Incompressible Navier-Stokes physics
[./IncompressibleNavierStokes]

material = 'TestMaterial'

FE_family = LAGRANGE
V_order = SECOND
P_order = FIRST


# Boundary ids:
# k = bottom -> 0
# k = top    -> 5
# j = bottom -> 1
# j = top    -> 3
# i = bottom -> 4
# i = top    -> 2

bc_ids = '0 1 2 3 4 5'
bc_types = 'no_slip no_slip no_slip no_slip no_slip no_slip'

pin_pressure = true 
pin_value = 100.0
pin_location = '0.5 0.5'

[../HeatTransfer]

material = 'TestMaterial'

FE_family = LAGRANGE
T_order = SECOND

bc_ids = '4 2 0 5 1 3'

bc_types = 'isothermal_wall isothermal_wall adiabatic_wall adiabatic_wall adiabatic_wall adiabatic_wall'

T_wall_4 = 1
T_wall_2 = 10

[../BoussinesqBuoyancy]

material = 'TestMaterial'

g = '0 -9.8 0'

[../VariableNames]

Temperature = 'T'
u_velocity = 'u'
v_velocity = 'v'
w_velocity = 'w'
pressure = 'p'

[]

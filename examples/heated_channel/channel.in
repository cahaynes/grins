# Material properties
[Materials]
   [./Gas]
      [./ThermodynamicPressure]
         value = '100000'
      [../ReferenceTemperature]
         value = '300'
      [../GasConstant]
         value = '287.0'
      [../ThermalConductivity]
         model = 'constant'
         value = '7.073943662' #[W/m-K] 
      [../Viscosity]
         model = 'constant'
         value = '0.01178' #[kg/m-s] 
      [../SpecificHeat]
         model = 'constant'
         value = '1004.5' #[J/kg-K] 
[]

# Options related to all Physics
[Physics]

enabled_physics = 'LowMachNavierStokes LowMachNavierStokesSPGSMStabilization'

# Options for Incompressible Navier-Stokes physics
[./LowMachNavierStokes]

material = 'Gas'

V_FE_family = 'LAGRANGE'
P_FE_family = 'LAGRANGE'
T_FE_family = 'LAGRANGE'

V_order = 'FIRST'
T_order = 'FIRST'
P_order = 'FIRST'

# Gravity vector
g = '0.0 -9.81' #[m/s^2]

# Boundary ids:
# inflow (left)= 1
# outflow (right) = 2
# top/bottom adiabatic part = 3
# bottom heated part = 4

vel_bc_ids = '1 2 3 4'
vel_bc_types = 'inflow constant_normal_stress no_slip no_slip'

temp_bc_ids = '1 2 3 4'
temp_bc_types = 'isothermal adiabatic adiabatic isothermal'

T_wall_1 = '293.0'

T_wall_4 = '439.5'

enable_thermo_press_calc = 'true'

pin_pressure = 'false'
pin_location = '0.0 0.0'
pin_value = '0.0'

[../LowMachNavierStokesBraackStabilization]

tau_constant = '30'
tau_factor = '0.005'

[]

[restart-options]

#restart_file = 'cavity.xdr'

[]

[BoundaryConditions]

[./Injection]



[]

# Mesh related options
[mesh-options]
mesh_option = 'read_mesh_from_file'
mesh_filename = 'channel.e'
element_type = QUAD9

uniformly_refine =  0 


# Options for tiem solvers
[unsteady-solver]
transient = true 
theta = 1.0
n_timesteps = 10
deltat = 0.0001

#Linear and nonlinear solver options
[linear-nonlinear-solver]
max_nonlinear_iterations =  65 
max_linear_iterations = 250

verify_analytic_jacobians = 0.0

initial_linear_tolerance = 1.0e-10

use_numerical_jacobians_only = 'true'

require_residual_reduction = 'true'

# Visualization options
[vis-options]
output_vis = true

vis_output_file_prefix = 'injection' 

output_residual = 'false'

output_format = 'ExodusII xdr'

# Options for print info to the screen
[screen-options]

system_name = 'HeatedChannel'

print_equation_system_info = true
print_mesh_info = true
print_log_info = true
solver_verbose = true
solver_quiet = false

print_element_jacobians = 'false'

[../VariableNames]

Temperature = 'T'
u_velocity = 'ux'
v_velocity = 'uy'
w_velocity = 'uz'
pressure = 'p'

[]
